<LoadList>:
    AnchorLayout:
		anchor_x: "left"
		anchor_y: "top"
		Button:
			text: '<'
			font_size:0.8 * self.height
			size_hint: .1, .1
			id: back_button
			on_release: root.manager.current = 'menu'
		AnchorLayout:
			anchor_x: "center"
			anchor_y: "top"
			Label:
				id: game_banner
				text: "Game name"
				size_hint: .1, .1
			BoxLayout:
				size: root.size
				pos: root.pos
				orientation: "vertical"
				Label:
					size_hint_y: 0.1
				FileChooserListView:
					id: filechooser
					size_hint_y: 1
					BoxLayout:
						size_hint_y: None
						height: 30
						Button:
							text: "Cancel"
							on_release: root.cancel()
						Button:
							text: "Load"
			                on_release: root.load(filechooser.selection)

<Menu>
	GridLayout:
		cols: 1
		Label:
			id: game_banner
			text: "Game name"
			size_hint: .1, .1
		StackLayout:
			orientation: 'lr-tb'
			padding: 20
			spacing: 20
			Button:
				text: "hanzi"
				size_hint: .3,.2
                on_release: root.manager.current = 'hanziquiz'
			Button:
				text: "pinyin"
				size_hint: .3, .2
                on_release: root.manager.current = 'pinyinquiz'
			Button:
				text: "meaning"
				size_hint: .3, .2
                on_release: root.manager.current = 'meaningquiz'
			Button:
				text: "load list"
				size_hint: .3, .2
				on_release: root.manager.current = 'loadlist'
			Button:
				text: "view list"
				size_hint: .3, .2
			Button:
				text: "settings"
				size_hint: .3, .2
                on_release: app.open_settings()